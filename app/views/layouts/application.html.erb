<!DOCTYPE html>
<html>
  <head>
    <title>Stock</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="errors_messages_container">
      <% p flash %>
      <% flash[:notice]&.each do |msg| %>
        <div class='error_card'>
          <%= msg %>
        </div>
      <% end %>
    </div>
    <%= yield %>

    <script>
      let errorsContainer = document.getElementById('errors_messages_container');

      setTimeout(() => errorsContainer.innerHTML = '', 6000);
    </script>
  </body>
</html>
